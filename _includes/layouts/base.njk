<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">

		<meta name="robots" content="noindex,nofollow">

		{% set css %} {% include "public/css/index.css" %} {% endset %}
		<style>{{ css | cssmin | safe }}</style>

	</head>
	<body>

		<header>
			<a href="/" class="home-link">{{ metadata.title }}</a>

			<nav>
				<ul class="nav">
					<li class="nav-item"><a href="/tags/js/">JS</a></li>
					<li class="nav-item"><a href="/tags/css/">CSS</a></li>
					<li class="nav-item"><a href="/tags/htaccess/">Htaccess</a></li>
					<li class="nav-item"><a href="/tags/php/">PHP</a></li>
					<li class="nav-item"><a href="/tags/misc/">Misc.</a></li>
				</ul>
			</nav>
		</header>

		<main id="skip">
			{{ content | safe }}
		</main>

		<footer>
			<p id="copyright-notice">Copyright &copy; <span id="copyright-year"></span> Bastiaan de Hart. All rights reserved. Licensed under <a href="https://creativecommons.org/licenses/by-nc-nd/4.0" target="_blank">CC BY-NC-ND 4.0</a></p>
		</footer>

		<script>document.getElementById("copyright-year").innerHTML = new Date().getFullYear();</script>


		<script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
		<script>hljs.highlightAll();</script>

	</body>
</html>
